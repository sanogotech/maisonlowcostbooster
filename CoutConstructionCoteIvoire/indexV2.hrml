                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Répartition des coûts de construction'
                    }
                }
            },
        };

        // Initialisation des graphiques
        document.addEventListener('DOMContentLoaded', function() {
            // Graphique de répartition des coûts
            const costDistributionChart = new Chart(
                document.getElementById('costDistributionChart'),
                costDistributionConfig
            );
            
            // Graphique du simulateur
            const budgetChart = new Chart(
                document.getElementById('budgetChart'),
                {
                    type: 'doughnut',
                    data: {
                        labels: ['Fondations', 'Élévation', 'Toiture', 'Finition', 'Divers'],
                        datasets: [{
                            data: [18, 27, 20, 28, 7],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.7)',
                                'rgba(54, 162, 235, 0.7)',
                                'rgba(255, 206, 86, 0.7)',
                                'rgba(75, 192, 192, 0.7)',
                                'rgba(153, 102, 255, 0.7)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            }
                        }
                    }
                }
            );
            
            // Initialisation du calculateur
            updateCostCalculation();
            
            // Animation des cartes au défilement
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                    }
                });
            }, observerOptions);
            
            document.querySelectorAll('.module-card').forEach(card => {
                observer.observe(card);
            });
        });

        // Fonction pour mettre à jour l'affichage de la surface
        document.getElementById('surfaceRange').addEventListener('input', function() {
            document.getElementById('surfaceValue').textContent = this.value + ' m²';
            updateCostCalculation();
        });

        // Fonctions pour mettre à jour le calcul des coûts
        function updateCostCalculation() {
            const surface = parseInt(document.getElementById('surfaceRange').value);
            const constructionType = document.getElementById('constructionType').value;
            const materialType = document.getElementById('materialType').value;
            const regionType = document.getElementById('regionType').value;
            const includeFees = document.getElementById('includeFees').checked;
            
            // Prix de base selon le type de construction
            let basePrice;
            switch(constructionType) {
                case 'economique':
                    basePrice = 150000;
                    break;
                case 'standard':
                    basePrice = 200000;
                    break;
                case 'confort':
                    basePrice = 250000;
                    break;
                case 'haut-gamme':
                    basePrice = 300000;
                    break;
                default:
                    basePrice = 200000;
            }
            
            // Ajustement selon le matériau
            let materialSaving = 0;
            if (materialType === 'btc') {
                materialSaving = 0.1; // Réduction de 10% pour BTC
                document.getElementById('elevationTitle').textContent = "Murs en BTC";
                document.getElementById('elevationDesc').textContent = "Briques de terre comprimée";
                document.getElementById('savingsInfo').style.display = 'block';
            } else {
                document.getElementById('elevationTitle').textContent = "Murs en parpaing";
                document.getElementById('elevationDesc').textContent = "Blocs de 15, enduit extérieur";
                document.getElementById('savingsInfo').style.display = 'none';
            }
            
            // Ajustement selon la région
            let regionCoefficient = 1;
            switch(regionType) {
                case 'abidjan':
                    regionCoefficient = 1.2;
                    break;
                case 'ville':
                    regionCoefficient = 1;
                    break;
                case 'rurale':
                    regionCoefficient = 0.8;
                    break;
            }
            
            // Application des coefficients
            basePrice = basePrice * (1 - materialSaving) * regionCoefficient;
            
            // Application des frais supplémentaires si demandé
            let totalCost = surface * basePrice;
            if (includeFees) {
                totalCost = totalCost * 1.15;
            }
            
            const formattedCost = new Intl.NumberFormat('fr-FR').format(totalCost);
            const formattedCostPerM2 = new Intl.NumberFormat('fr-FR').format(Math.round(totalCost / surface));
            
            document.getElementById('totalCost').textContent = formattedCost + ' FCFA';
            document.getElementById('costPerM2').textContent = formattedCostPerM2 + ' FCFA/m²';
            
            // Mise à jour des économies BTC
            if (materialType === 'btc') {
                const costWithoutSaving = surface * basePrice / (1 - materialSaving) * regionCoefficient * (includeFees ? 1.15 : 1);
                const savings = costWithoutSaving - totalCost;
                document.getElementById('savingsAmount').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(savings)) + ' FCFA';
            }
            
            // Mise à jour des pourcentages dans le calculateur de coûts
            updateCostBreakdown(totalCost, constructionType);
        }

        // Fonction pour mettre à jour la répartition des coûts
        function updateCostBreakdown(totalCost, constructionType) {
            // Pourcentages variables selon le type de construction
            let percentages = {
                fondations: 0.18,
                elevation: 0.27,
                toiture: 0.20,
                finition: 0.28,
                divers: 0.07
            };
            
            // Ajustement des pourcentages selon le type de construction
            switch(constructionType) {
                case 'economique':
                    percentages.fondations = 0.15;
                    percentages.elevation = 0.25;
                    percentages.toiture = 0.20;
                    percentages.finition = 0.30;
                    percentages.divers = 0.10;
                    document.getElementById('finishTitle').textContent = "Finition économique";
                    document.getElementById('finishDesc').textContent = "Revêtements basiques, électricité standard";
                    break;
                case 'standard':
                    percentages.fondations = 0.18;
                    percentages.elevation = 0.27;
                    percentages.toiture = 0.20;
                    percentages.finition = 0.28;
                    percentages.divers = 0.07;
                    document.getElementById('finishTitle').textContent = "Finition standard";
                    document.getElementById('finishDesc').textContent = "Carrelage, peinture, électricité";
                    break;
                case 'confort':
                    percentages.fondations = 0.20;
                    percentages.elevation = 0.28;
                    percentages.toiture = 0.22;
                    percentages.finition = 0.25;
                    percentages.divers = 0.05;
                    document.getElementById('finishTitle').textContent = "Finition confort";
                    document.getElementById('finishDesc').textContent = "Carrelage qualité, menuiserie aluminium, éclairage LED";
                    break;
                case 'haut-gamme':
                    percentages.fondations = 0.22;
                    percentages.elevation = 0.30;
                    percentages.toiture = 0.25;
                    percentages.finition = 0.18;
                    percentages.divers = 0.05;
                    document.getElementById('finishTitle').textContent = "Finition haut de gamme";
                    document.getElementById('finishDesc').textContent = "Matériaux premium, domotique, équipements luxe";
                    break;
            }
            
            // Calcul des coûts par poste
            const foundationCost = totalCost * percentages.fondations;
            const elevationCost = totalCost * percentages.elevation;
            const roofCost = totalCost * percentages.toiture;
            const finishCost = totalCost * percentages.finition;
            const otherCost = totalCost * percentages.divers;
            
            // Mise à jour de l'affichage
            document.getElementById('foundationCost').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(foundationCost)) + ' FCFA';
            document.getElementById('elevationCost').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(elevationCost)) + ' FCFA';
            document.getElementById('roofCost').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(roofCost)) + ' FCFA';
            document.getElementById('finishCost').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(finishCost)) + ' FCFA';
            document.getElementById('otherCost').textContent = new Intl.NumberFormat('fr-FR').format(Math.round(otherCost)) + ' FCFA';
            
            // Mise à jour des badges de pourcentage
            document.querySelectorAll('.cost-card .badge').forEach((badge, index) => {
                const values = Object.values(percentages);
                if (index < values.length) {
                    badge.textContent = Math.round(values[index] * 100) + '%';
                }
            });
            
            // Mise à jour du graphique
            updateBudgetChart(percentages);
        }

        // Mise à jour du graphique du budget
        function updateBudgetChart(percentages) {
            const chart = Chart.getChart('budgetChart');
            if (chart) {
                chart.data.datasets[0].data = [
                    Math.round(percentages.fondations * 100),
                    Math.round(percentages.elevation * 100),
                    Math.round(percentages.toiture * 100),
                    Math.round(percentages.finition * 100),
                    Math.round(percentages.divers * 100)
                ];
                chart.update();
            }
        }

        // Mise à jour lors du changement de type de construction ou de matériau
        document.getElementById('constructionType').addEventListener('change', updateCostCalculation);
        document.getElementById('materialType').addEventListener('change', updateCostCalculation);
        document.getElementById('regionType').addEventListener('change', updateCostCalculation);
        document.getElementById('includeFees').addEventListener('change', updateCostCalculation);

        // Fonctions pour sauvegarder et imprimer
        function saveEstimation() {
            const surface = document.getElementById('surfaceRange').value;
            const constructionType = document.getElementById('constructionType').options[document.getElementById('constructionType').selectedIndex].text;
            const materialType = document.getElementById('materialType').options[document.getElementById('materialType').selectedIndex].text;
            const regionType = document.getElementById('regionType').options[document.getElementById('regionType').selectedIndex].text;
            const includeFees = document.getElementById('includeFees').checked ? 'Oui' : 'Non';
            const totalCost = document.getElementById('totalCost').textContent;
            const costPerM2 = document.getElementById('costPerM2').textContent;
            
            const estimation = `
                ESTIMATION DE CONSTRUCTION
                ==========================
                Surface: ${surface} m²
                Type: ${constructionType}
                Matériau: ${materialType}
                Région: ${regionType}
                Frais inclus: ${includeFees}
                
                COÛT TOTAL: ${totalCost}
                COÛT AU M²: ${costPerM2}
                
                DÉTAIL PAR POSTE:
                - Fondations: ${document.getElementById('foundationCost').textContent}
                - Élévation: ${document.getElementById('elevationCost').textContent}
                - Toiture: ${document.getElementById('roofCost').textContent}
                - Finition: ${document.getElementById('finishCost').textContent}
                - Divers: ${document.getElementById('otherCost').textContent}
                
                Date: ${new Date().toLocaleDateString()}
            `;
            
            const blob = new Blob([estimation], { type: 'text/plain' });
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = `estimation-construction-${new Date().getTime()}.txt`;
            a.click();
            
            showToast('Estimation sauvegardée avec succès!');
        }

        function printEstimation() {
            showToast('Fonction d\'impression bientôt disponible!');
        }

        function showToast(message) {
            // Création d'un toast Bootstrap (simplifié)
            const toast = document.createElement('div');
            toast.className = 'position-fixed bottom-0 end-0 p-3';
            toast.innerHTML = `
                <div class="toast show" role="alert">
                    <div class="toast-header">
                        <strong class="me-auto">Guide Construction</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            document.body.appendChild(toast);
            
            // Suppression automatique après 3 secondes
            setTimeout(() => {
                document.body.removeChild(toast);
            }, 3000);
        }

        // Fonction pour afficher les détails (exemple)
        function showDetails(type) {
            alert('Fonctionnalité en développement: Détails sur ' + type.toUpperCase());
        }
    </script>
</body>
</html>
